<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sandrstar.android.gallery"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />

    <application android:windowAnimationStyle="@android:style/Animation.Translucent"
                 android:debuggable="true"
                 android:icon="@drawable/icon"
                 android:label="@string/app_name">
        <activity android:name=".gallery"
                  android:activityOpenEnterAnimation="@android:style/Animation.Translucent"
                  android:activityCloseExitAnimation="@android:style/Animation.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ThumbnailsView"
                  android:icon="@drawable/icon_thumbnail"
                  android:activityOpenEnterAnimation="@android:style/Animation.Translucent"
                  android:activityCloseExitAnimation="@android:style/Animation.Translucent">
        </activity>
        <activity android:name="FullScreenView"
                  android:icon="@drawable/icon_thumbnail"
                  android:activityOpenEnterAnimation="@android:style/Animation.Translucent"
                  android:activityCloseExitAnimation="@android:style/Animation.Translucent">
        </activity>
        <activity android:name="ListViewGallery"
                  android:activityOpenEnterAnimation="@android:style/Animation.Translucent"
                  android:activityCloseExitAnimation="@android:style/Animation.Translucent">
        </activity>
        <activity android:name="com.sandrstar.android.gallery.DetailsView"
                  android:activityOpenEnterAnimation="@android:style/Animation.Translucent"
                  android:activityCloseExitAnimation="@android:style/Animation.Translucent">
        </activity>
    </application>
</manifest>