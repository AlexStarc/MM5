<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details_layout">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_margin="2dp"
              android:id="@+id/details_displayname"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:typeface="serif"
              android:textSize="25dp"
              android:maxLines="2">
    </TextView>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="2dp"
              android:layout_marginTop="10dp"
              android:layout_below="@id/details_displayname"
              android:id="@+id/details_path_label"
              android:text="@string/details_path_label"
              android:textSize="20dp"
              android:textStyle="bold">
    </TextView>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="2dp"
              android:layout_marginTop="2dp"
              android:id="@+id/details_path"
              android:layout_toRightOf="@id/details_path_label"
              android:layout_below="@id/details_displayname"
              android:textSize="20dp">
    </TextView>
</RelativeLayout>
