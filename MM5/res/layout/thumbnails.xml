<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/thumbnail_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/relativeLayout2"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent">
        <TextView 
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:id="@+id/thumbnailItemDisplayName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0">
        </TextView>
        <TextView 
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:id="@+id/thumbnailCounter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0/0">
        </TextView>
    </RelativeLayout>
    <GridView
        android:layout_width="match_parent"
        android:id="@+id/gridView1"
        android:layout_below="@+id/relativeLayout2"
        android:layout_above="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="spacingWidthUniform"
        android:focusableInTouchMode="true"
        android:drawSelectorOnTop="false"
        android:focusable="true">
    </GridView>
    <ImageView
        android:layout_width="180dp"
        android:id="@+id/imageView1"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    </ImageView>
    <RelativeLayout
        android:id="@+id/thimbnail_optionbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/bottombar"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">
        <Button
            android:background="@drawable/thumbview_view_button"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/viewButton">
        </Button>
        <Button
            android:background="@drawable/thumbview_delete_button"
            android:layout_toRightOf="@id/viewButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/deleteButton">
        </Button>
    </RelativeLayout>
</RelativeLayout>
