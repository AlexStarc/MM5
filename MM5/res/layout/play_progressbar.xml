<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_marginRight="2dp"
              android:id="@+id/play_progressbar_elapsed_time"
              android:textSize="20dp"
              android:textColor="@android:color/secondary_text_light"
              android:text="00:00">
    </TextView>
    <ProgressBar style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="150dp"
                 android:layout_height="15dp"
                 android:layout_toRightOf="@id/play_progressbar_elapsed_time"
                 android:layout_centerVertical="true"
                 android:indeterminate="false"
                 android:id="@+id/play_progressbar_bar">
    </ProgressBar>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/play_progressbar_bar"
              android:layout_marginLeft="2dp"
              android:id="@+id/play_progressbar_total_time"
              android:textSize="20dp"
              android:textColor="@android:color/secondary_text_light"
              android:text="00:00">
    </TextView>
</RelativeLayout>
