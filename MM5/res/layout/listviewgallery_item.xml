<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/listview_item_button"
            android:focusable="false"
            android:id="@+id/listview_item_play">
    </ImageView>
    <TextView android:layout_alignParentLeft="true"
              android:layout_toLeftOf="@id/listview_item_play"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_margin="5dp"
              android:id="@+id/listview_item_text"
              android:layout_centerVertical="true"
              android:textSize="30dp">
    </TextView>
</RelativeLayout>
